<h1 class="text-center">Sign up</h1>
<%= form_for @author, class: "form-group" do |f| %>
	<% form_authenticity_token %>
	<div class="row mb-1">
		<div class="col-3">
			Email
			<%= f.text_field 'email', class: 'form-control' %>
		</div>
		<div class="col-3">
			Password
			<%= f.password_field 'password', class: 'form-control' %>
		</div>
		<div class="col-3">
			Confirm password (To fix => Crash if not identical!)
			<%= f.password_field 'password_confirmation', class: 'form-control' %>
		</div>
		<div class="col-3">
			<br>
			<%= f.submit nil, class: "btn btn-outline-success" %>
		</div>
	</div>
<% end %>

<%= link_to "Already an account ?", new_session_path, class: "btn btn-outline-primary" %>