<% content_for :title, controller_name == 'static_pages' ? "#{params[:action].capitalize}" : "#{params[:controller].capitalize.singularize}" %>
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= yield :title %> | TheGossipProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <!-- Nav -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls='navbarToggler' aria-expanded='false' aria-label='Toggle navigation'>
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to "HOME", gossips_path, class: "navbar-brand"%>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "team", team_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "contact", contact_path, class: "nav-link" %>  
          </li>
          <li class="nav-item">
            <%= link_to "create gossip", new_gossip_path, class: "nav-link" %>  
          </li>
          
          <li class="nav-item">
            <%= link_to "New account", new_author_path, class: "nav-link" %>  
          </li>
          <li class="nav-item">
            <%= link_to "Log In", new_session_path, class: "nav-link" %>  
          </li>
          
          <li class="nav-item">
            <%= link_to "Log Out", session_path(session.id), method: :delete, class: "nav-link" %>  
          </li>
          <li class="nav-item">
            <%= link_to "conversations", conversations_path, class: "nav-link" %>  
          </li>
        </ul>
      </div>
    </nav>
    <!-- End of Nav -->

    <!-- Flash messages -->
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type %>"><%= message %></div>
    <% end %>
    <!-- End of Flash messages -->
    <div class="container">
      <%= yield %>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>

