<h1>Forgot password</h1>

<div class="row">
	<div class="col-md-6 offset-md-3">
		<%= form_for(:password_reset, url: password_resets_path) do |f| %>
		<% form_authenticity_token %>
		<%= f.label :email %>
		<%= f.text_field :email, class: "form-control" %>
		<%= f.submit "Send", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>